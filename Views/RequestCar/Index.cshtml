@model IEnumerable<Car>
@{
    ViewData["Title"] = "Car Page";
}

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var car in Model)
    {
        <div class="col">
            <div class="card h-100">
                <input type="hidden" name="carId" value="@car.CarID" />
                <div style="height: 200px; overflow: hidden;">
                    <img class="card-img-top" style="height: 100%; object-fit: cover;"
                     src="@car.CarImageUrl">
                </div>
                <div class="card-body">
                    <h5 class="card-title">@car.Manufacturer</h5>
                    <p class="card-text">@car.Model</p>
                    <p class="card-text">@car.VehicleNo</p>
                </div>
                <div class="card-footer">
                    <a asp-controller="RequestCar" asp-action="AddRequestCar" asp-route-id="@car.CarID" class="btn btn-primary">Request</a>
                  
                </div>
            </div>
        </div>
    }
</div>
