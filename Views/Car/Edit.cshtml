@model Car

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Car Detail</h2>

        </div>
        <input hidden asp-for="CarID"/>
        <div class="mb-3">
            <label asp-for="Manufacturer"></label>
            <input asp-for="Manufacturer" class="form-control" />
            <span asp-validation-for="Manufacturer" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Model"></label>
            <input asp-for="Model" class="form-control" />
            <span asp-validation-for="Model" class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="Color"></label>
            <input asp-for="Color" class="form-control" />
            <span asp-validation-for="Color" class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="RentalRate"></label>
            <input asp-for="RentalRate" class="form-control" />
            <span asp-validation-for="RentalRate" class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="VehicleNo"></label>
            <input asp-for="VehicleNo" class="form-control" />
            <span asp-validation-for="VehicleNo" class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="IsAvailable"></label>
            <div>
                <label><input asp-for="IsAvailable" type="radio" value="true" checked />Yes</label>
                <label><input asp-for="IsAvailable" type="radio" value="false" />No</label>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-controller="Car" asp-action="Index" class="btn btn-secondary">Back</a>
    </div>

</form>
