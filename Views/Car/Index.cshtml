@model IEnumerable<Car>
@{
    ViewData["Title"] = "Car Page";
}

<div class="container p-3 test">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Cars List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Car" asp-action="Create" class="btn btn-primary">Add New Car</a>
        </div>
    </div>
</div>
<hr class="mt-3"/>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Manufacturer</th>
            <th>Model</th>
            <th>Color</th>
            <th>RentalRate</th>
            <th>Vehicle No</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td>
                    @car.Manufacturer
                </td>
                <td>
                    @car.Model
                </td>
                <td>
                    @car.Color
                </td>
                <td>
                    @car.RentalRate
                </td>
                <td>
                    @car.VehicleNo
                </td>
                <td>
                    @car.IsAvailable
                </td>
                <td>
                    <a asp-controller="Car" asp-action="Edit" asp-route-id="@car.CarID" class="anchor-size text-success"><i class="fas fa-edit"></i></a>
                    <a asp-controller="Car" asp-action="Delete" asp-route-id="@car.CarID" class="anchor-size text-danger"><i class="fa fa-trash"></i></a>

                </td>
            </tr>
        }
    </tbody>
</table>
